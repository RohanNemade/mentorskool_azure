						},
						"dateAdded": {
							"type": "string"
						},
						"dateUpdated": {
							"type": "string"
						},
						"dimension": {
							"type": "string"
						},
						"manufacturer": {
							"type": "string"
						},
						"product_name": {
							"type": "string"
						},
						"sizes": {
							"type": "string"
						},
						"upc": {
							"type": "string"
						},
						"weight": {
							"type": "null"
						},
						"product_photos_qty": {
							"type": "integer"
						}
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ADLS_LS')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/returns_sink')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
