					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": "products.json",
						"fileSystem": "landing-container"
					}
				},
				"schema": {
					"type": "object",
					"properties": {
						"product_id": {
							"type": "string"
						},
						"categories": {
